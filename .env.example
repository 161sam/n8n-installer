BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Backup Storage
BACKUP_STORAGE_PATH=/opt/workspace-backups
BACKUP_COMPRESSION=gzip
BACKUP_ENCRYPTION=false

